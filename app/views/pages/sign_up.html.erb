<div class="container">
  <div class="col-sm-offset-2 col-sm-10">
    <h2> Sign Up For Our Monthly Newsletter: </h2>
  </div>
  <%= form_for @user, url: {action: "send_sign_up"}, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%=f.label 'First Name:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :firstname, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Last Name:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :lastname, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag(:email, "Email:", :class => "col-sm-2 control-label") %>
      <div class="col-sm-10">
        <%=email_field_tag :email, "", class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%=f.submit "Sign Me Up!", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>