<div class="container">
  <div class="text-center">
    <h2> Sign Up For Our Monthly Newsletter: </h2>
  </div>
  <%= form_for @user, url: {action: "send_sign_up"}, html: {name: "registration", class: "form-horizontal", onsubmit: "return validateForm()"} do |f| %>
    <div class="form-group">
      <%=f.label 'First Name:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :firstname, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Last Name:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :lastname, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag(:email, "Email:", :class => "col-sm-2 control-label") %>
      <div class="col-sm-10">
        <%=email_field_tag :email, "", class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%=f.submit "Sign Me Up!", :class => "btn btn-primary" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= link_to "View All Subscribers", recipients_path, :class => "btn btn-info text-center" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
    function validateForm()
    {
        var first=document.forms["registration"]["user[firstname]"].value;
        var last=document.forms["registration"]["user[lastname]"].value;
        var mail=document.forms["registration"]["email"].value;
        if (first==null || first=="" || last==null || last=="" || mail==null || mail=="")
        {
            alert("Please Fill In All Required Fields");
        }
    }
</script>